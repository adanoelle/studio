{
  "name": "studio",
  "private": true,
  "type": "module",
  "description": "Studio monorepo - unified design system for creative practice",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:status": "changeset status --verbose",
    "version": "changeset version"
  },
  "keywords": [
    "web-components",
    "lit",
    "design-system",
    "feminist-theory",
    "glitch-feminism",
    "monorepo",
    "music-journal"
  ],
  "author": "Ada",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/adanoelle/studio"
  },
  "bugs": {
    "url": "https://github.com/adanoelle/studio/issues"
  },
  "homepage": "https://github.com/adanoelle/studio#readme"
}
