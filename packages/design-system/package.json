{
  "name": "@glitch/design-system",
  "version": "0.1.0",
  "description": "Web components grounded in feminist theory",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./glitch-text": {
      "types": "./dist/components/core/glitch-text.d.ts",
      "import": "./dist/components/core/glitch-text.js"
    },
    "./glitch-border": {
      "types": "./dist/components/core/glitch-border.d.ts",
      "import": "./dist/components/core/glitch-border.js"
    },
    "./dithered-glitch-gradient": {
      "types": "./dist/components/core/dithered-glitch-gradient.d.ts",
      "import": "./dist/components/core/dithered-glitch-gradient.js"
    },
    "./holographic-ui": {
      "types": "./dist/components/composite/holographic-ui.d.ts",
      "import": "./dist/components/composite/holographic-ui.js"
    },
    "./dither-corruption": {
      "types": "./dist/components/composite/dither-corruption.d.ts",
      "import": "./dist/components/composite/dither-corruption.js"
    },
    "./dash-trail": {
      "types": "./dist/components/composite/dash-trail.d.ts",
      "import": "./dist/components/composite/dash-trail.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "web-test-runner \"src/**/*.test.ts\" --node-resolve",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "web-components",
    "lit",
    "design-system",
    "feminist-theory",
    "glitch-feminism",
    "accessibility"
  ],
  "author": "Ada",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@open-wc/testing": "^4.0.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.0.0",
    "playwright": "^1.58.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "@glitch/tokens": "workspace:*",
    "lit": "^3.1.0"
  },
  "peerDependencies": {
    "lit": "^3.1.0"
  }
}
