{
  "name": "@studio/design-system",
  "version": "0.1.0",
  "description": "Web components for creative practice - grounded in feminist theory",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./glitch": {
      "types": "./dist/glitch/index.d.ts",
      "import": "./dist/glitch/index.js"
    },
    "./audio": {
      "types": "./dist/audio/index.d.ts",
      "import": "./dist/audio/index.js"
    },
    "./analog": {
      "types": "./dist/analog/index.d.ts",
      "import": "./dist/analog/index.js"
    },
    "./glitch/*": {
      "types": "./dist/glitch/*.d.ts",
      "import": "./dist/glitch/*.js"
    },
    "./audio/*": {
      "types": "./dist/audio/*.d.ts",
      "import": "./dist/audio/*.js"
    },
    "./analog/*": {
      "types": "./dist/analog/*.d.ts",
      "import": "./dist/analog/*.js"
    }
  },
  "sideEffects": [
    "./dist/glitch/glitch-text.js",
    "./dist/glitch/glitch-border.js",
    "./dist/glitch/dithered-glitch-gradient.js",
    "./dist/glitch/holographic-ui.js",
    "./dist/glitch/dither-corruption.js",
    "./dist/glitch/dash-trail.js",
    "./dist/audio/visualization-canvas.js",
    "./dist/audio/hydra-canvas.js"
  ],
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && rm -f tsconfig.tsbuildinfo && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "web-components",
    "lit",
    "design-system",
    "feminist-theory",
    "glitch-feminism",
    "accessibility"
  ],
  "author": "Ada",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@vitest/browser": "^4.0.18",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.0.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@studio/tokens": "workspace:*",
    "lit": "^3.1.0"
  },
  "peerDependencies": {
    "hydra-synth": "^1.4.0",
    "lit": "^3.1.0"
  },
  "peerDependenciesMeta": {
    "hydra-synth": {
      "optional": true
    }
  }
}
